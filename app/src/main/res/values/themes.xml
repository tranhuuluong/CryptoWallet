<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CryptoWallet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/AppTextView</item>
    </style>

    <style name="AppTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/sofia_regular</item>
    </style>

    <style name="AppTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/AppTextAppearance</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTextAppearance.Bold">
        <item name="android:fontFamily">@font/sofia_bold</item>
    </style>

    <style name="AppTextAppearance.SemiBold">
        <item name="android:fontFamily">@font/sofia_semi_bold</item>
    </style>

    <style name="AppTextAppearance.Thin">
        <item name="android:fontFamily">@font/sofia_light</item>
    </style>

    <style name="EmptyResults">
        <item name="android:drawablePadding">@dimen/space_large</item>
        <item name="android:drawableTop">@drawable/ic_no_items_found_204</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/AppTextAppearance.SemiBold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/grey</item>
    </style>
</resources>